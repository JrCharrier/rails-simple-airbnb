  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
          <h3 class="mb-0">Add a New Flat</h3>
        </div>
        <div class="card-body">
          <%= render "form", flat: @flat %>
        </div>
        <div class="card-footer text-end">
          <%= link_to "Back to flats", flats_path, class: "btn btn-secondary" %>
        </div>
      </div>
    </div>
  </div>
</div>
