<%= render "navbar" %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <!-- Card pour l'édition du flat -->
      <div class="card shadow-lg border-0 rounded-4 mb-4">
        <div class="card-header bg-primary text-white">
          <h3 class="mb-0">Edit the Flat</h3>
        </div>
        <div class="card-body">
          <!-- Formulaire d'édition du flat -->
          <%= render "form", flat: @flat %>
        </div>
        <div class="card-footer text-end">
          <!-- Bouton pour retourner à la liste des flats -->
          <%= link_to "Back to flats", flats_path, class: "btn btn-custom-outline-secondary btn-lg" %>
        </div>
      </div>
    </div>
  </div>
</div>
